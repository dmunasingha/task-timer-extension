{
  "manifest_version": 3,
  "name": "TaskTimer Pro",
  "version": "1.0.0",
  "description": "Track time spent on tasks with a beautiful, modern interface",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/icons/icon16.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    }
  },
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  }
}